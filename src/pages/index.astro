---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import PostList from "../components/PostList.astro";
import TagList from "../components/Tag/TagList.astro";

const posts = (await getCollection("blog")).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <h3 class="text-center">一覧</h3>
  <PostList posts={posts} />
  <h3 class="text-center mt-10">Tag一覧</h3>
  <TagList />
</BaseLayout>
