---
import type { CollectionEntry } from "astro:content";
import { URL_BASE } from "../consts";
import FormattedDate from "./FormattedDate.astro";

type Props = { posts: CollectionEntry<"blog">[] };
const { posts } = Astro.props;
---

<ul class="max-w-screen-md mx-auto">
  {
    posts.map(post => (
      <li class="px-2 pt-2 pb-1 border-b hover:border-sky-400">
        <a href={`${URL_BASE}/blog/${post.slug}/`} class="flex items-center">
          <h4 class="text-xl font-bold mb-0">{post.data.title}</h4>
          <p class="text-sm text-gray-400 mb-0 ml-2">
            <FormattedDate date={post.data.pubDate} />
          </p>
        </a>
      </li>
    ))
  }
</ul>
