---
import type { CollectionEntry } from "astro:content";
import { URL_BASE } from "../consts";
import FormattedDate from "./FormattedDate.astro";

type Props = { posts: CollectionEntry<"blog">[] };
const { posts } = Astro.props;
---

<ul>
  {
    posts.map(post => (
      <li class="border-b px-2 pb-1 pt-2 hover:border-sky-400">
        <a href={`${URL_BASE}/blog/${post.slug}/`} class="flex items-center">
          <h4 class="mb-0 text-xl font-bold">{post.data.title}</h4>
          <p class="mb-0 ml-2 text-sm text-gray-400">
            <FormattedDate date={post.data.pubDate} />
          </p>
        </a>
      </li>
    ))
  }
</ul>
